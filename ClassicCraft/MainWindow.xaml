                                                <ComboBoxItem>63</ComboBoxItem>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Margin="0 10 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Boss Armor" TextWrapping="Wrap" Grid.Column="0" />
                                            <ComboBox IsEditable="True" x:Name="BossArmor" PreviewTextInput="WholeNumberCheck" Grid.Column="1" SelectedIndex="0">
                                                <ComboBoxItem>0</ComboBoxItem>
                                                <ComboBoxItem>4400</ComboBoxItem>
                                                <ComboBoxItem>6400</ComboBoxItem>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Margin="0 10 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Boss Life Mode" TextWrapping="Wrap" Grid.Column="0" />
                                            <ComboBox x:Name="BossLifeMode" SelectionChanged="BossLifeMode_SelectionChanged" Grid.Column="1" SelectedIndex="0" Height="22" VerticalAlignment="Top">
                                                <ComboBoxItem>Auto</ComboBoxItem>
                                                <ComboBoxItem>Custom</ComboBoxItem>
                                            </ComboBox>
                                        </Grid>
                                        <Grid Margin="0 10 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Boss Low Life at (seconds)" TextWrapping="Wrap" Grid.Column="0" />
                                            <TextBox x:Name="BossLowLifeTime" PreviewTextInput="NumberCheck" IsEnabled="False" Grid.Column="1" />
                                        </Grid>
                                        <Grid Margin="0 10 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Player Unlimited Mana" TextWrapping="Wrap" Grid.Column="0" />
                                            <CheckBox x:Name="UnlimitedMana" Grid.Column="1" />
                                        </Grid>
