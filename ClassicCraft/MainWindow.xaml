                                            <ComboBoxItem>Waist</ComboBoxItem>
                                            <ComboBoxItem>Legs</ComboBoxItem>
                                            <ComboBoxItem>Feet</ComboBoxItem>
                                            <ComboBoxItem>Ring</ComboBoxItem>
                                            <ComboBoxItem>Trinket</ComboBoxItem>
                                            <ComboBoxItem>Enchant</ComboBoxItem>
                                        </ComboBox>
                                    </Grid>
                                    <Grid Margin="0 4 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Weapon Type" Grid.Column="0" />
                                        <ComboBox x:Name="WeaponType" Grid.Column="1" SelectedIndex="0">
                                            <ComboBoxItem>Axe</ComboBoxItem>
                                            <ComboBoxItem>Dagger</ComboBoxItem>
                                            <ComboBoxItem>Mace</ComboBoxItem>
                                            <ComboBoxItem>Sword</ComboBoxItem>
                                            <ComboBoxItem>Fist</ComboBoxItem>
                                            <ComboBoxItem>Polearm</ComboBoxItem>
                                            <ComboBoxItem>Staff</ComboBoxItem>
                                            <ComboBoxItem>Bow</ComboBoxItem>
                                            <ComboBoxItem>Crossbow</ComboBoxItem>
                                            <ComboBoxItem>Gun</ComboBoxItem>
                                            <ComboBoxItem>Wand</ComboBoxItem>
                                        </ComboBox>
                                    </Grid>
                                    <Grid Margin="0 4 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Damage Min" Grid.Column="0" />
                                        <TextBox x:Name="DamageMin" Grid.Column="1" Width="50" PreviewTextInput="WholeNumberCheck" />
                                    </Grid>
                                    <Grid Margin="0 4 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Damage Max" Grid.Column="0" />
                                        <TextBox x:Name="DamageMax" Grid.Column="1" Width="50" PreviewTextInput="WholeNumberCheck" />
                                    </Grid>
                                    <Grid Margin="0 4 0 0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Text="Speed" Grid.Column="0" />
                                        <TextBox x:Name="Speed" Grid.Column="1" Width="50" PreviewTextInput="NumberCheck" />
                                    </Grid>
                                    <TextBlock Text="Stats" Margin="0 4 0 0"/>
                                    <Border Margin="2" Padding="2" BorderBrush="#D6D6D6" BorderThickness="1" Background="#F2F2F2" CornerRadius="2">
                                        <StackPanel>
                                            <StackPanel x:Name="StackPanelStats">
                                                <Grid Margin="0 0 0 5">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="150" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="Auto" />
                                                    </Grid.ColumnDefinitions>
                                                    <ComboBox Grid.Column="0">
                                                        <ComboBoxItem>Agility</ComboBoxItem>
                                                        <ComboBoxItem>Intellect</ComboBoxItem>
                                                        <ComboBoxItem>Spirit</ComboBoxItem>
                                                        <ComboBoxItem>Stamina</ComboBoxItem>
                                                        <ComboBoxItem>Strength</ComboBoxItem>
                                                        <ComboBoxItem>Attack Power</ComboBoxItem>
                                                        <ComboBoxItem>Spell Power</ComboBoxItem>
                                                        <ComboBoxItem>Healing Power</ComboBoxItem>
                                                        <ComboBoxItem>Hit Chance</ComboBoxItem>
                                                        <ComboBoxItem>Spell Hit Chance</ComboBoxItem>
                                                        <ComboBoxItem>Critical Chance</ComboBoxItem>
                                                        <ComboBoxItem>Spell Critical Chance</ComboBoxItem>
                                                        <ComboBoxItem>MP5</ComboBoxItem>
                                                        <ComboBoxItem>Attack Speed</ComboBoxItem>
                                                    </ComboBox>
                                                    <TextBox PreviewTextInput="WholeNumberCheck" Grid.Column="2" Width="50" />
                                                </Grid>
                                            </StackPanel>
                                            <Button Click="StatsAdd_Click" Content="+" Width="20" HorizontalAlignment="Left"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
                <TabItem Header= "Console" x:Name="ConsoleTab">
                    <Border Margin="5" Padding="2" BorderBrush="#D2D2D2" BorderThickness="1" Background="#FFFFFF" CornerRadius="2">
                        <ScrollViewer VerticalScrollBarVisibility="Visible">
                            <TextBox x:Name="Console" />
                        </ScrollViewer>
                    </Border>
                </TabItem>
            </TabControl>
            <Border Grid.Row="1" Padding="4" BorderBrush="#D6D6D6" BorderThickness="1" Background="#FAFAFA" Margin="0 10 0 0" CornerRadius="2" Height="40" VerticalAlignment="Top" Grid.ColumnSpan="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ProgressBar x:Name="ProgressBar" Grid.Column="0" Margin="5" Value="100" />
                    <TextBlock x:Name="ProgressText" Text="Waiting for configuration..." HorizontalAlignment="Center" Grid.Column="0" Margin="5" Padding="2" />
                    <TextBlock x:Name="ProgressPercent" Text="" HorizontalAlignment="Right" Grid.Column="0" Margin="5" Padding="2" />
                    <Button x:Name="RunButton" Content="Let's go!" Click="Run_Click" Padding="10 2 10 2" Grid.Column="1" Margin="4" />
                </Grid>
            </Border>
        </Grid>

    </Border>
</Window>
